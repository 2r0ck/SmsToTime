<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.yarulin.smstotime.MainActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="#00F"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        app:layout_constraintLeft_toLeftOf="@+id/calendarView"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        android:id="@+id/but_test"
        android:onClick="OnTestClick"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read sms test"
        app:layout_constraintLeft_toRightOf="@+id/but_test"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        android:onClick="OnTestReadClick"
        android:id="@+id/but_readSms"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Sms Grant"
        app:layout_constraintLeft_toRightOf="@+id/but_readSms"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        android:onClick="OnGetGrantClick"
        />



</android.support.constraint.ConstraintLayout>
